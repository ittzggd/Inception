version: '3'

volumes:
    data: {}
services:
    mariadb:
        image: debian:buster
        restart: always
        expose:
            - "3306"
        networks:
            - intra
        tty: true
    nginx:
        image: debian:buster
        restart: always
        ports:
            - "443:443"
        volumes:
            - data:/var/www/html
        networks:
            - intra
        tty: true
    wordpress:
        image: debian:buster
        restart: always
        volumes:
            - data:/var/www/html
        expose: 
            - "9000"
        networks:
            - intra
        tty: true
networks:
    intra:
        driver: bridge


service:
    mariadb:
        build:
            context: .
            dockercile: requirement/mariadb/Dockerfile
            args:
        image: mariadb
        container_name: mariadb
        ports:
            - "3306:3306"
        networks:
            - networks_hejang
    
    wordpress:
        depends_on:
            - mariadb
        build:
            context: .
            dockerfile: requirements/wordpress/Dockerfile
        env_file:
            - .env
        image: wordpress
        container_name: wordpress
        networks:
            - networks_hejang
        restart: always